#include <stdio.h>

int main(void) {
int cod_peca1, numero_peca1, cod_peca2,numero_peca2;
double valor_peca1,valor_peca2;

scanf("%d %d %lf",&cod_peca1, &numero_peca1, &valor_peca1);
scanf("%d %d %lf",&cod_peca2, &numero_peca2, &valor_peca2);

printf("VALOR A PAGAR: R$ %.2f\n",(numero_peca1*valor_peca1)+(numero_peca2*valor_peca2));

return 0;
}
