 #include <stdio.h>

int main() {

//Melhor inicio sempre eh o zero

float  num,total,media;
int cont,totalnum;

//Declarando valor das variaveis.

totalnum = 0;
total = 0;
media = 0;


//Para 
for (cont = 1; cont <= 6; cont++) {
scanf("%f", &num);

//Se
if (num > 0) {
totalnum += 1;
total += num;
}
}
//Calculo da media de numeros positivos
media = total / totalnum;

//Apresentacao dos resultados

printf("%d valores positivos\n", totalnum);

printf("%.1f\n",media);
return 0;
}
